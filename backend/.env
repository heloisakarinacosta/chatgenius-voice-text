
# API Configuration
PORT=8080

# Environment Selection
# Use 'development' ou 'production'
NODE_ENV=production

# OpenAI API Key
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Database Configuration - Development
# Para MySQL 8+, use 'mysql_native_password' ou 'caching_sha2_password'
# Para MariaDB, geralmente 'mysql_native_password' funciona bem
DEV_DB_HOST=127.0.0.1
DEV_DB_USER=root
DEV_DB_PASSWORD=
DEV_DB_NAME=chat_assistant
DEV_DB_AUTH_PLUGIN=mysql_native_password

# Database Configuration - Production
# Comente estas linhas se não estiver usando ambiente de produção
PROD_DB_HOST=127.0.0.1
PROD_DB_USER=produtos
PROD_DB_PASSWORD=
PROD_DB_NAME=chat_assistant
PROD_DB_AUTH_PLUGIN=mysql_native_password

# Voice and Speech Settings
# Ajustes para melhorar a detecção de voz e silêncio
VOICE_LATENCY=30
SILENCE_TIMEOUT=0.6
WAIT_BEFORE_SPEAKING=0.05
WAIT_AFTER_PUNCTUATION=0.03
WAIT_WITHOUT_PUNCTUATION=0.2
WAIT_AFTER_NUMBER=0.1
